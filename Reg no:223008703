package com.mycompany.project;

/**
 *
 * @author Janvier
 */
public class trianglepattern {
     public static void main(String[] args) {
     int n=7;// number of rows
     for(int i=1;i<=n;i++){ 
         for(int j=1;j<=i;j++){
             System.out.print(j+"");
  }  
      System.out.println();
         }
     }
     }
